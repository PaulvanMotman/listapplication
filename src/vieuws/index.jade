doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		title MY APP
	body
		h1 AWESOME STAR WARS QUOTES APP
		form(action='/quotes', method='POST')
			input(type='text', placeholder='name', name='name')
			input(type='text', placeholder='quote', name='quote')
			button(type='submit') Submit
		img(src="starwars.jpg" style="height: 200px; width: 350px; margin-top: 20px;")
		ul
			each user in quotes
				li="A dude who go's by the name of " + user.name + " said the following wise words:"
				li=user.quote
				br
